#!/usr/bin/env bash

install_packages="$1"

if [ "$install_packages" == 'install' ];
    then ./packages $2
fi

# config files
mkdir -p ~/.config

# Copy config
ln -f -s $PWD/.config/neofetch ~/.config
ln -f -s $PWD/.config/alacritty ~/.config
ln -f -s $PWD/.config/starship.toml ~/.config/starship.toml
ln -f -s $PWD/.zshrc ~/.zshrc
