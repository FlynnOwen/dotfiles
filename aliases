# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"
alias c="clear"
alias cddots="cd ~/dotfiles"

# Utility
alias l.="ls -d .*"

# Python3 as default
alias python="python3"

# M1 mac installation
alias brew="arch -arm64 brew"

# dotfiles
alias dotssync="cddots && git pull"

# OS specific
if [[ "$(uname)" == "Darwin" ]];
    then alias o="open ."
elif [[ "$(uname)" == "Linux" ]];
    then alias o="xdg-open"
fi